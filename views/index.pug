head
  meta(charset='UTF-8')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
  title my money

body

  br
  // Основное поле
  .container
    // Поиск
    .row
      form.form-inline.col-sm-12.col-md-12(action="/convert")
        .col-sm-12.col-md-3
          .input-group
            if (mFrom === undefined)
              input#moneyFrom.form-control(type='number' step = 0.01 placeholder='из' required=true name="moneyFrom")
            else
              input#moneyFrom.form-control(type='number' step = 0.01 placeholder='из' required=true name="moneyFrom" value = mFrom)
        .col-sm-12.col-md-2
          .input-group
            select#currencyFrom(name='currencyFrom' class="form-control")
              -for(let i = 0; i < currencyFrom.length; i++)
                option(value=currencyFrom[i]) #{currencyFrom[i]}
        .col-sm-12.col-md-3
          .input-group
            if (mTo === undefined)
              input#moneyTo.form-control(type='number' step = 0.01 readonly placeholder='в' name="moneyTo")
            else
              input#moneyTo.form-control(type='number' step = 0.01 readonly placeholder='в' name="moneyTo" value = mTo)
        .col-sm-12.col-md-2
          .input-group
            select#currencyTo(name='currencyTo' class="form-control")
              -for(let i = 0; i < currencyTo.length; i++)
                  option(value=currencyTo[i]) #{currencyTo[i]}

        .col-sm-12.col-md-2
          button.btn.btn-dark.btn-block(type='submit' style='background-color: #3f294f;') Перевести


  nav.navbar.fixed-bottom.navbar-expand-sm.navbar-light.bg-light
    footer.main-footer.d-flex.p-2.px-3(style='margin: 0 0 0 auto;')
